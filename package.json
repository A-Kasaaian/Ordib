{
  "name": "Ordib",
  "version": "1.0.0",
  "description": "Ordib is a lightweight and flexible state management for React with middleware and immutability.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "prepare": "yarn build",
    "test": "jest",
    "lint": "eslint",
    "changelog": "npx conventional-changelog -p angular -i CHANGELOG.md -s",
    "create-tag": "node -e \"process.stdout.write(require('./package.json').version)\" | xargs -I {} git tag -a v{} -m \"Release v{}\"",
    "release": "yarn changelog && yarn create-tag && git push origin --tags",
    "prepublish": "yarn lint && yarn test && yarn build"
  },
  "keywords": [
    "react",
    "state-management",
    "middleware",
    "selectors",
    "typescript",
    "Ordib"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/A-Kasaaian/Ordib.git"
  },
  "author": "Alireza Kasaaian",
  "license": "MIT",
  "dependencies": {
    "lodash.isequal": "^4.5.0",
    "react": "^18.0.0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.25.9",
    "@eslint/compat": "^1.2.4",
    "@eslint/js": "^9.17.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^13.4.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "^29.5.14",
    "@types/lodash.isequal": "^4.5.8",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "conventional-changelog-cli": "^5.0.0",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-testing-library": "^7.1.1",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "react-dom": "^18.2.0",
    "react-test-renderer": "^18.2.0",
    "ts-jest": "^29.2.5",
    "typescript": "^4.0.0",
    "typescript-eslint": "^8.19.1"
  }
}
